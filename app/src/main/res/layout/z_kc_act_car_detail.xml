<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
              android:orientation="vertical">

  <include layout="@layout/z_kc_default_head"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tender_primary_color">

    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/sdCarPhoto"
      android:layout_width="146dp"
      android:layout_height="146dp"
      android:layout_centerInParent="true"
      android:layout_gravity="center_vertical"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      fresco:actualImageScaleType="focusCrop"
      fresco:fadeDuration="1000"
      fresco:placeholderImage="@drawable/default_head_portrait"
      fresco:placeholderImageScaleType="focusCrop"
      fresco:roundAsCircle="true"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="7dp"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/truck_number"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvPlateNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/truck_type"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvCarType"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/oil_card"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvOilCard"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="7dp"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/driver"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvDriverName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/driver_number"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvDriverPhone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="7dp"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/status"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvCarStatus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="@string/now_location"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tvCarLocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:drawableRight="@drawable/icon_right_arrows"
      android:textColor="@color/text_black"
      android:textSize="16sp"/>
  </RelativeLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/z_kc_line"/>
</LinearLayout>