<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <TextView
    android:id="@+id/tvAddCar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/green"
    android:gravity="center"
    android:padding="10dp"
    android:text="@string/add_car"
    android:textColor="@android:color/white"
    android:textSize="18sp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/tvAddCar"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/z_kc_default_head"/>

    <EditText
      android:id="@+id/etCarNumber"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/login_edit_normal"
      android:hint="@string/input_car_number"
      android:lines="1"
      android:textColorHint="@color/hint"
      android:textSize="18sp"/>

    <EditText
      android:id="@+id/etDriverPhone"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/login_edit_normal"
      android:hint="@string/input_driver_phone"
      android:lines="1"
      android:textColorHint="@color/hint"
      android:textSize="18sp"/>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@drawable/login_edit_normal">

      <Spinner
        android:id="@+id/spinnerTruckType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>